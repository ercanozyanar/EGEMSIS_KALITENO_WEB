@using PagedList.Mvc;
@using PagedList;
@using Uretim_Kalite.Models.Entity;

@model PagedList.IPagedList<EGEM_ESNEK_DILIMLEME_KALITENOKIMAJ>

@{
    ViewBag.Title = "DilimlemeNOK";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

&nbsp;
<div class="alert alert-warning alert-dismissible fade show" role="alert">
    <strong>Esnek Dilimleme Kalite NOK Liste</strong>
</div>
&nbsp;

<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="/lib/bootstrap.min.css">
<script src="/lib/jquery-1.12.2.min.js"></script>
<script src="/lib/bootstrap.min.js"></script>
<p></p>
<div class="form-group row">
    &nbsp;&nbsp;
    <div>
        @using (Html.BeginForm("DilimlemeNOK", "EsnekDilimleme", FormMethod.Get))
        {
            <p>
                Sipariş No: @Html.TextBox("Search_Data", ViewBag.FilterValue as string)
                <input type="submit" value="Bul" />
            </p>
        }
    </div>
    &nbsp;&nbsp;
</div>
<table id="dilimlemenok" class="table table-striped table-bordered table-hover " width="100" cellspacing="0">

    <tr>
        <th>SIPARIS_NO</th>
        <th>BOBIN_NO</th>
        <th>HATA</th>
        <th>IMAJ</th>
        <th>ADRES</th>
    </tr>
    <tbody>
        @foreach (var edilimlemenok in Model)
        {
            <tr>
                <th>@edilimlemenok.SIPARISNO</th>
                <td>@edilimlemenok.BOBINNO</td>
                <td>@edilimlemenok.HATA</td>
                <td>@edilimlemenok.IMAJ</td>
                <td>
                    <img src="~/Content/NOK_IMAJ/ESNEKDILIMLEME/@edilimlemenok.ADRES" width="100" height="100" />
                </td>
            </tr>
        }
    </tbody>

</table>
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
        @Html.PagedListPager(Model, Page_No =>Url.Action("DilimlemeNOK",
            new { Page_No, Sorting_Order= ViewBag.CurrentSortOrder, Filter_Value = ViewBag.FilterValue }))




